---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/common/Navigation.astro';
import Footer from '../components/common/Footer.astro';
import ProductCard from '../components/resources/ProductCard.astro';
import CategoryFilter from '../components/resources/CategoryFilter.astro';
import productsData from '../data/products.json';
import heroData from '../copy/resources/hero.json';
import benefitsData from '../copy/resources/benefits.json';
import testimonialsData from '../copy/resources/testimonials.json';
import ctaData from '../copy/resources/cta.json';

const { categories, testimonials } = productsData;

// Flatten all products for grid display
const allProducts = categories.flatMap(category => 
  category.products.map(product => ({
    ...product,
    categoryId: category.id,
    categoryName: category.name
  }))
);
---

<Layout title="Resources - Katalog Produk Automation | Aitomate.id" description="Jelajahi katalog lengkap produk automation kit dan setup service dari Aitomate.id. WhatsApp automation, AI agents, dan solusi bisnis lainnya.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden pt-32 pb-20">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-accent-500/10 border border-accent-500/20 rounded-full px-4 py-2 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full"></div>
          <span class="text-sm font-medium text-accent-600">500+ Bisnis Sudah Menggunakan</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
          Katalog Produk<br/>
          <span class="text-accent-600">Automation Kit</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          <span class="text-accent-600 font-semibold">Ready-to-Deploy Solutions</span> â€¢ Kit Only atau Kit + Setup<br/>
          <span class="text-gray-600">Pilih paket sesuai kebutuhan dan budget Anda</span>
        </p>

        <!-- Stats -->
        <div class="flex justify-center items-center gap-6 mb-8">
          <div class="text-center">
            <div class="text-xl font-bold text-accent-600">15+</div>
            <div class="text-sm text-gray-600">Produk Tersedia</div>
          </div>
          <div class="w-px h-6 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-xl font-bold text-accent-600">24 Jam</div>
            <div class="text-sm text-gray-600">Delivery Time</div>
          </div>
          <div class="w-px h-6 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-xl font-bold text-accent-600">98%</div>
            <div class="text-sm text-gray-600">Success Rate</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 bg-white border-b border-gray-100">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-6xl mx-auto">
        <CategoryFilter categories={categories} activeCategory="all" />
      </div>
    </div>
  </section>

  <!-- Product Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-6xl mx-auto">
        <!-- Products Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="products-grid">
          {allProducts.map((product) => (
            <div data-product-category={product.categoryId} class="product-card">
              <ProductCard product={product} />
            </div>
          ))}
        </div>
        
        <!-- Empty State -->
        <div id="empty-state" class="text-center py-16 hidden">
          <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Tidak ada produk ditemukan</h3>
          <p class="text-gray-600">Coba pilih kategori lain atau lihat semua produk</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Our Kits -->
  <section class="py-16 bg-gradient-to-br from-mint-50 via-cream-50 to-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Mengapa Pilih Automation Kit Kami?
          </h2>
          <p class="text-lg text-gray-600">
            Solusi automation yang terbukti, mudah diimplementasi, dan hemat biaya
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Deploy Cepat</h3>
            <p class="text-gray-600">Setup dalam hitungan jam, bukan minggu</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">100% Milik Sendiri</h3>
            <p class="text-gray-600">No monthly fees, full control atas data</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Fully Customizable</h3>
            <p class="text-gray-600">Modify sesuai kebutuhan bisnis unik Anda</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Expert Support</h3>
            <p class="text-gray-600">Dukungan dari tim automation specialist</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Apa Kata Mereka yang Sudah Menggunakan?
          </h2>
          <p class="text-lg text-gray-600">
            Testimoni dari 500+ bisnis Indonesia yang sudah menggunakan produk kami
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.map((testimonial) => (
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
              <div class="flex items-center gap-1 mb-4">
                {[...Array(testimonial.rating)].map((_, i) => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="text-gray-700 mb-4 italic">\"{testimonial.text}\"</p>
              <div class="border-t border-gray-200 pt-4">
                <p class="font-semibold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-600">{testimonial.company}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-accent-500 to-accent-600">
    <div class="container mx-auto px-4 md:px-8 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Siap Memulai Automation Journey?
        </h2>
        <p class="text-xl text-accent-100 mb-8 max-w-2xl mx-auto">
          Konsultasi GRATIS dengan tim automation specialist kami untuk menemukan solusi terbaik untuk bisnis Anda
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button class="bg-white text-accent-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-50 transition-colors">
            Konsultasi Gratis
          </button>
          <button class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-accent-600 transition-colors">
            Lihat Demo Live
          </button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Smooth scroll to category sections
  function scrollToCategory(categoryId: string): void {
    const element = document.getElementById(`category-${categoryId}`);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  }
</script>
