---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={`${post.data.title} - AITOMATION.ID`}
  description={post.data.description}
>
  <Navigation />

  <div class="pt-24 pb-16 min-h-screen">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Back to Blog -->
        <div class="mb-8">
          <a 
            href="/blog" 
            class="inline-flex items-center gap-2 text-accent-600 hover:text-accent-700 font-medium transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Kembali ke Blog
          </a>
        </div>

        <!-- Article Header -->
        <header class="mb-12">
          <div class="mb-4">
            <span class="inline-block bg-accent-500/10 text-accent-600 px-3 py-1 rounded-lg text-sm font-medium">
              {post.data.category}
            </span>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {post.data.title}
          </h1>
          <div class="flex items-center gap-4 text-sm text-gray-500 mb-6">
            <time>
              {post.data.pubDate.toLocaleDateString('id-ID', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
            {post.data.author && (
              <>
                <span>â€¢</span>
                <span>{post.data.author}</span>
              </>
            )}
          </div>
          <p class="text-lg text-gray-600 leading-relaxed">
            {post.data.description}
          </p>
        </header>

        <!-- Article Content -->
        <article class="prose prose-lg max-w-none">
          <div class="bg-white/60 backdrop-blur-sm border border-white/20 rounded-2xl p-8 md:p-12">
            <Content />
          </div>
        </article>

        <!-- CTA Section -->
        <div class="mt-16">
          <div class="bg-gradient-to-r from-accent-500/10 to-accent-600/10 backdrop-blur-sm border border-accent-500/20 rounded-2xl p-8 text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
              Siap Mengimplementasikan Tips Ini?
            </h2>
            <p class="text-gray-600 mb-6">
              Dapatkan sistem otomasi WhatsApp lengkap dengan AITOMATION.ID
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                href="/#pricing"
                class="inline-flex items-center gap-2 bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg border border-accent-600 font-semibold transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Lihat Paket
              </a>
              <a 
                href="/blog"
                class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-sm border border-white/30 hover:bg-white/80 text-gray-700 px-8 py-4 rounded-lg font-semibold transition-colors"
              >
                Baca Artikel Lain
              </a>
            </div>
          </div>
        </div>

        <!-- Related Articles -->
        <div class="mt-16">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Artikel Terkait</h3>
          <div class="grid md:grid-cols-2 gap-6">
            <a href="/blog/self-hosted-vs-saas-bisnis-indonesia" class="bg-white/60 backdrop-blur-sm border border-white/20 rounded-2xl p-6 hover:bg-white/80 transition-all duration-300 hover:shadow-lg group">
              <span class="inline-block bg-accent-500/10 text-accent-600 px-3 py-1 rounded-lg text-sm font-medium mb-3">
                Insight
              </span>
              <h4 class="font-bold text-gray-900 mb-2 group-hover:text-accent-600 transition-colors">
                Mengapa Self-Hosted Lebih Baik dari SaaS
              </h4>
              <p class="text-gray-600 text-sm">
                Bandingkan keuntungan sistem self-hosted vs SaaS untuk bisnis Indonesia
              </p>
            </a>
            <a href="/blog/setup-whatsapp-business-api-15-menit" class="bg-white/60 backdrop-blur-sm border border-white/20 rounded-2xl p-6 hover:bg-white/80 transition-all duration-300 hover:shadow-lg group">
              <span class="inline-block bg-accent-500/10 text-accent-600 px-3 py-1 rounded-lg text-sm font-medium mb-3">
                Guide
              </span>
              <h4 class="font-bold text-gray-900 mb-2 group-hover:text-accent-600 transition-colors">
                Setup WhatsApp Business API dalam 15 15 Menit
              </h4>
              <p class="text-gray-600 text-sm">
                Panduan step-by-step lengkap untuk mengaktifkan WhatsApp Business API
              </p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style>
/* Custom prose styles for better readability */
.prose {
  color: #374151;
  line-height: 1.75;
}

.prose h1, .prose h2, .prose h3, .prose h4 {
  color: #111827;
  font-weight: 700;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.prose h1 {
  font-size: 2.25rem;
  line-height: 1.2;
}

.prose h2 {
  font-size: 1.875rem;
  line-height: 1.3;
}

.prose h3 {
  font-size: 1.5rem;
  line-height: 1.4;
}

.prose p {
  margin-bottom: 1.5rem;
}

.prose ul, .prose ol {
  margin-bottom: 1.5rem;
  padding-left: 1.5rem;
}

.prose li {
  margin-bottom: 0.5rem;
}

.prose code {
  background-color: #f3f4f6;
  padding: 0.25rem 0.5rem;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  color: #dc2626;
}

.prose pre {
  background-color: #1f2937;
  color: #f9fafb;
  padding: 1.5rem;
  border-radius: 0.75rem;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.prose pre code {
  background-color: transparent;
  color: inherit;
  padding: 0;
}

.prose blockquote {
  border-left: 4px solid #22c55e;
  padding-left: 1.5rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: #6b7280;
}

.prose a {
  color: #22c55e;
  text-decoration: underline;
}

.prose a:hover {
  color: #16a34a;
}

.prose strong {
  font-weight: 600;
  color: #111827;
}
</style>