---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/common/Navigation.astro';
import Footer from '../../components/common/Footer.astro';
import productsData from '../../copy/products.json';

export async function getStaticPaths() {
  const paths = [];
  
  for (const category of productsData.categories) {
    for (const product of category.products) {
      paths.push({
        params: { id: product.id },
        props: { product }
      });
    }
  }
  
  return paths;
}

const { product } = Astro.props;
---

<Layout title={`${product.title} - Automation Kit | Aitomate.id`} description={product.description}>
  <Navigation />
  
  <!-- Product Hero -->
  <section class="relative overflow-hidden pt-32 pb-20">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a href="/" class="hover:text-accent-600">Home</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/resources" class="hover:text-accent-600">Resources</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900">{product.title}</li>
          </ol>
        </nav>

        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <!-- Product Image -->
          <div class="aspect-square bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl relative overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-24 h-24 bg-accent-500 rounded-3xl flex items-center justify-center">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Product Info -->
          <div>
            {product.popular && (
              <div class="inline-flex items-center gap-2 bg-accent-500/10 border border-accent-500/20 rounded-full px-4 py-2 mb-4">
                <div class="w-2 h-2 bg-accent-500 rounded-full"></div>
                <span class="text-sm font-medium text-accent-600">Most Popular</span>
              </div>
            )}
            
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{product.title}</h1>
            <p class="text-lg text-gray-700 mb-6">{product.description}</p>

            <!-- Features -->
            <div class="mb-8">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Fitur Lengkap:</h3>
              <div class="grid md:grid-cols-2 gap-3">
                {product.features.map((feature) => (
                  <div class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Packages Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Pilih Paket yang Sesuai</h2>
          <p class="text-lg text-gray-600">Tersedia 2 opsi: Kit Only atau Kit + Setup Service</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {product.packages.map((pkg) => (
            <div class={`bg-white rounded-2xl border-2 p-8 relative ${pkg.type === 'kit_plus_setup' ? 'border-accent-500 shadow-lg' : 'border-gray-200'}`}>
              {pkg.type === 'kit_plus_setup' && (
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-accent-500 text-white px-6 py-2 rounded-full text-sm font-semibold">
                  Recommended
                </div>
              )}
              
              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{pkg.name}</h3>
                <p class="text-gray-600 mb-4">{pkg.description}</p>
                <div class="mb-4">
                  <span class="text-4xl font-bold text-accent-600">{pkg.price}</span>
                  <span class="text-lg text-gray-400 line-through ml-2">{pkg.originalPrice}</span>
                </div>
              </div>

              <div class="mb-8">
                <h4 class="font-semibold text-gray-900 mb-4">Yang Anda Dapatkan:</h4>
                <ul class="space-y-3">
                  {pkg.includes.map((item) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <button class={`w-full py-4 px-6 rounded-lg font-semibold text-lg transition-colors ${
                pkg.type === 'kit_plus_setup' 
                  ? 'bg-accent-500 hover:bg-accent-600 text-white' 
                  : 'bg-gray-100 hover:bg-gray-200 text-gray-900 border border-gray-300'
              }`}>
                {pkg.type === 'kit_plus_setup' ? 'Pesan Kit + Setup' : 'Pesan Kit Only'}
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Setup Process -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Proses Setup (Kit + Setup)</h2>
          <p class="text-lg text-gray-600">Langkah mudah untuk implementasi automation kit Anda</p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">1</div>
            <h3 class="font-semibold text-gray-900 mb-2">Konsultasi</h3>
            <p class="text-sm text-gray-600">Diskusi kebutuhan dan requirement</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">2</div>
            <h3 class="font-semibold text-gray-900 mb-2">Kustomisasi</h3>
            <p class="text-sm text-gray-600">Sesuaikan kit dengan bisnis Anda</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">3</div>
            <h3 class="font-semibold text-gray-900 mb-2">Deployment</h3>
            <p class="text-sm text-gray-600">Install dan konfigurasi sistem</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">4</div>
            <h3 class="font-semibold text-gray-900 mb-2">Training</h3>
            <p class="text-sm text-gray-600">Pelatihan penggunaan dan maintenance</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>