---
import problemData from '../../copy/problem.json';
---

<section class="py-16 md:py-20">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Problem Statement -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {problemData.heading.main} <span class="text-red-600">{problemData.heading.highlight}</span> {problemData.heading.suffix}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {problemData.description}
        </p>
      </div>

      <!-- Problems Grid -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        {problemData.problems.map((problem) => (
          <div class="bg-white/30 border border-gray-200 rounded-lg p-6 text-center">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
              <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">{problem.title}</h3>
            <p class="text-gray-600 text-sm">{problem.description}</p>
          </div>
        ))}
      </div>

      <!-- Solution -->
      <div class="text-center">
        <div class="bg-accent-500/10 border border-accent-500/20 rounded-lg p-8 max-w-4xl mx-auto">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            <span class="text-accent-600">{problemData.solution.heading.brand}</span> {problemData.solution.heading.text}
          </h3>
          <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
            {problemData.solution.description.split('100% milik sendiri')[0]}<span class="font-semibold text-accent-600">100% milik sendiri</span>{problemData.solution.description.split('100% milik sendiri')[1]}
          </p>
          
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            {problemData.solution.benefits.map((benefit) => (
              <div class="text-center">
                <div class="w-16 h-16 bg-accent-500/20 rounded-full flex items-center justify-center mb-3 mx-auto">
                  <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold text-gray-900 mb-1">{benefit.title}</h4>
                <p class="text-gray-600 text-sm">{benefit.description}</p>
              </div>
            ))}
          </div>
          
          <!-- CTA -->
          <button 
            onclick="scrollToSection('pricing')"
            class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg border border-accent-600 font-semibold text-lg transition-colors"
          >
            {problemData.solution.cta}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>