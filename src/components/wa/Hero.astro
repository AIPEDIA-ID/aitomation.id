---
import heroData from '../../copy/wa/hero.json';
---

<section class="relative overflow-hidden pt-32 pb-20">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-accent-500/10 border border-accent-500/20 rounded-full px-4 py-2 mb-8">
        <div class="w-2 h-2 bg-accent-500 rounded-full"></div>
        <span class="text-sm font-medium text-accent-700">{heroData.badge.text}</span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        <span class="text-red-600">STOP</span> {heroData.heading.main.replace('STOP ', '')}<br/>
        <span class="text-accent-600">{heroData.heading.subtitle.split(' ')[0]} {heroData.heading.subtitle.split(' ')[1]} </span><br/>
        {heroData.heading.subtitle.split(' ').slice(2).join(' ')}
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
        <span class="text-accent-600 font-semibold">{heroData.description.primary.split(' • ')[0]}</span> • {heroData.description.primary.split(' • ').slice(1).join(' • ')} <br/>
        <span class="text-gray-600">{heroData.description.secondary}</span>
      </p>

      <!-- Social Proof -->
      <div class="flex justify-center items-center gap-6 mb-8">
        {heroData.socialProof.stats.map((stat, index) => (
          <>
            <div class="text-center">
              <div class="text-xl font-bold text-accent-600">{stat.number}</div>
              <div class="text-sm text-gray-600">{stat.label}</div>
            </div>
            {index < heroData.socialProof.stats.length - 1 && <div class="w-px h-6 bg-gray-300"></div>}
          </>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
        <button 
          onclick="scrollToSection('pricing')"
          class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg border border-accent-600 font-semibold text-lg transition-colors w-full sm:w-auto"
        >
          {heroData.buttons.primary}
        </button>
        <button 
          onclick="scrollToSection('features')"
          class="bg-white/60 border border-gray-300 hover:bg-white/80 text-gray-800 px-8 py-4 rounded-lg font-medium text-lg transition-colors w-full sm:w-auto"
        >
          {heroData.buttons.secondary}
        </button>
      </div>

      <!-- Urgency -->
      <!-- <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 max-w-md mx-auto">
        <p class="text-sm text-yellow-800 font-medium">
          {heroData.urgency.text}
        </p>
      </div> -->
    </div>
  </div>
</section>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>