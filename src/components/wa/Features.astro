---
import featuresData from '../../copy/features.json';
---

<section id="features" class="py-16 md:py-20">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {featuresData.heading.main}<br/>
          <span class="text-accent-600">{featuresData.heading.highlight}</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          {featuresData.description}
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {featuresData.features.map((feature) => (
          <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg hover:border-accent-300 transition-all duration-300 group relative overflow-hidden">
            <!-- Background decoration -->
            <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-accent-500/5 to-accent-600/10 rounded-full transform translate-x-8 -translate-y-8"></div>
            
            <!-- Icon -->
            <div class="w-12 h-12 bg-gradient-to-br from-accent-500 to-accent-600 rounded-xl flex items-center justify-center mb-4 relative z-10 group-hover:scale-110 transition-transform duration-300">
              {feature.icon === 'truck' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {feature.icon === 'spreadsheet' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2h2a2 2 0 002-2z"></path>
                </svg>
              )}
              {feature.icon === 'receipt' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              )}
              {feature.icon === 'message' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              )}
              {feature.icon === 'api' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                </svg>
              )}
              {feature.icon === 'database' && (
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                </svg>
              )}
            </div>

            <!-- Content -->
            <h3 class="text-lg font-semibold text-gray-900 mb-2 relative z-10">
              {feature.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed relative z-10">
              {feature.description}
            </p>
            
            <!-- Bottom accent line -->
            <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-accent-500 to-accent-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          </div>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center">
        <div class="bg-gradient-to-br from-accent-500/10 to-accent-600/15 border border-accent-500/20 rounded-xl p-8 max-w-2xl mx-auto relative overflow-hidden">
          <!-- Background decoration -->
          <div class="absolute top-0 left-0 w-32 h-32 bg-gradient-to-br from-accent-500/10 to-transparent rounded-full transform -translate-x-16 -translate-y-16"></div>
          <div class="absolute bottom-0 right-0 w-24 h-24 bg-gradient-to-tl from-accent-600/10 to-transparent rounded-full transform translate-x-12 translate-y-12"></div>
          
          <h3 class="text-xl font-bold text-gray-900 mb-3 relative z-10">
            {featuresData.cta.heading}
          </h3>
          <p class="text-gray-600 mb-4 relative z-10">
            {featuresData.cta.description}
          </p>
          <button 
            onclick="scrollToSection('pricing')"
            class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-3 rounded-lg border border-accent-600 font-semibold transition-colors relative z-10"
          >
            {featuresData.cta.button}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>