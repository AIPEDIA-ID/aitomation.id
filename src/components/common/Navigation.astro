---
import navigationData from '../../copy/navigation.json';
---

<nav class="fixed top-0 left-0 right-0 z-50 py-6">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white/40 backdrop-blur-md border border-white/20 rounded-2xl px-6 py-3 shadow-sm">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2">
            <div class="w-6 h-6 bg-accent-500 rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <span class="text-base font-bold text-gray-900">{navigationData.brand}</span>
          </a>

          <!-- Navigation Links -->
          <div class="hidden md:flex items-center gap-6">
            {navigationData.links.map((link) => (
              <a href={link.href} class="text-sm font-medium text-gray-600 hover:text-accent-600 transition-colors">
                {link.text}
              </a>
            ))}
          </div>

          <!-- CTA Button -->
          <button 
            onclick="scrollToSection('pricing')"
            class="bg-accent-500 hover:bg-accent-600 text-white px-4 py-2 rounded-lg border border-accent-600 font-semibold text-xs transition-colors shadow-sm"
          >
            {navigationData.cta}
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>