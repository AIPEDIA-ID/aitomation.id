---
const features = [
  {
    icon: "truck",
    title: "Cek Ongkir Otomatis",
    description: "Integrasi RajaOngkir untuk cek ongkos kirim real-time"
  },
  {
    icon: "spreadsheet",
    title: "Cek Stok & Harga",
    description: "Sinkronisasi data produk dari Google Sheets"
  },
  {
    icon: "receipt",
    title: "Invoice & QR Payment",
    description: "Generate invoice dan QR payment via Midtrans"
  },
  {
    icon: "message",
    title: "Auto-Reply Kategori",
    description: "Respon otomatis berdasarkan kategori pesan"
  },
  {
    icon: "api",
    title: "Integrasi API",
    description: "Koneksi dengan ekspedisi dan sistem internal"
  },
  {
    icon: "database",
    title: "Database Produk",
    description: "Kelola harga, stok, dan kategori produk"
  }
];
---

<section id="features" class="py-16 md:py-20">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Fitur Lengkap untuk<br/>
          <span class="text-accent-600">Otomasi WhatsApp Bisnis</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          Sistem lengkap yang sudah digunakan 500+ bisnis Indonesia
        </p>
        
        <button 
          onclick="scrollToSection('pricing')"
          class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-3 rounded-lg border border-accent-600 font-semibold transition-colors"
        >
          Lihat Harga & Paket →
        </button>
      </div>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {features.map((feature) => (
          <div class="bg-white/40 border border-white/20 rounded-lg p-6 hover:bg-white/60 transition-colors">
            <!-- Icon -->
            <div class="w-10 h-10 bg-accent-500/10 rounded-lg flex items-center justify-center mb-4">
              {feature.icon === 'truck' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {feature.icon === 'spreadsheet' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2h2a2 2 0 002-2z"></path>
                </svg>
              )}
              {feature.icon === 'receipt' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              )}
              {feature.icon === 'message' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              )}
              {feature.icon === 'api' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                </svg>
              )}
              {feature.icon === 'database' && (
                <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                </svg>
              )}
            </div>

            <!-- Content -->
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center">
        <div class="bg-accent-500/10 border border-accent-500/20 rounded-lg p-6 max-w-2xl mx-auto">
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            Dapatkan Semua Fitur Ini Sekarang!
          </h3>
          <p class="text-gray-600 mb-4">
            Setup dalam 15 menit, langsung bisa digunakan
          </p>
          <button 
            onclick="scrollToSection('pricing')"
            class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-3 rounded-lg border border-accent-600 font-semibold transition-colors"
          >
            Lihat Harga Spesial →
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>