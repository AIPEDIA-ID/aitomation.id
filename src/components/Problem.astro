<section class="py-16 md:py-20">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Problem Statement -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Apakah Anda Masih <span class="text-red-600">Repot</span> dengan Ini?
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          95% bisnis Indonesia masih mengalami masalah ini setiap hari
        </p>
      </div>

      <!-- Problems Grid -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white/30 border border-gray-200 rounded-lg p-6 text-center">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Manual Reply Berulang</h3>
          <p class="text-gray-600 text-sm">Buang 3-5 jam/hari untuk jawab pertanyaan sama</p>
        </div>

        <div class="bg-white/30 border border-gray-200 rounded-lg p-6 text-center">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Order Terlewat</h3>
          <p class="text-gray-600 text-sm">Kehilangan 30-50% prospek karena telat respon</p>
        </div>

        <div class="bg-white/30 border border-gray-200 rounded-lg p-6 text-center">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Biaya SaaS Bulanan</h3>
          <p class="text-gray-600 text-sm">Habis 5-15jt/tahun untuk langganan SaaS</p>
        </div>
      </div>

      <!-- Solution -->
      <div class="text-center">
        <div class="bg-accent-500/10 border border-accent-500/20 rounded-lg p-8 max-w-4xl mx-auto">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            <span class="text-accent-600">AITOMATION.ID</span> Solusi Terbaik!
          </h3>
          <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
            Sistem otomasi WhatsApp yang <span class="font-semibold text-accent-600">100% milik sendiri</span>, setup cepat, dan hemat jutaan rupiah
          </p>
          
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-accent-500/20 rounded-full flex items-center justify-center mb-3 mx-auto">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-1">Setup  15 Menit</h4>
              <p class="text-gray-600 text-sm">Langsung jalan tanpa ribet</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-accent-500/20 rounded-full flex items-center justify-center mb-3 mx-auto">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-1">100% Milik Sendiri</h4>
              <p class="text-gray-600 text-sm">Data dan server di tangan Anda</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-accent-500/20 rounded-full flex items-center justify-center mb-3 mx-auto">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-1">Hemat Jutaan</h4>
              <p class="text-gray-600 text-sm">Investasi sekali, pakai selamanya</p>
            </div>
          </div>
          
          <!-- CTA -->
          <button 
            onclick="scrollToSection('pricing')"
            class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg border border-accent-600 font-semibold text-lg transition-colors"
          >
            Lihat Harga Spesial Sekarang â†’
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
function scrollToSection(id) {
  document.getElementById(id)?.scrollIntoView({ 
    behavior: 'smooth',
    block: 'start'
  });
}
</script>