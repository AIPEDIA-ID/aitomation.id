---
export interface Product {
  id: string;
  title: string;
  description: string;
  features: string[];
  image: string;
  packages: Array<{
    type: string;
    name: string;
    price: string;
    originalPrice: string;
    description: string;
    includes: string[];
  }>;
  popular?: boolean;
}

export interface Props {
  product: Product;
}

const { product } = Astro.props;
const kitPackage = product.packages.find(pkg => pkg.type === 'kit') || product.packages[0];
---

<div class={`relative bg-white rounded-lg border transition-all hover:shadow-lg ${product.popular ? 'ring-2 ring-accent-500 shadow-md' : 'border-gray-200 shadow-sm hover:border-gray-300'}`}>
  {product.popular && (
    <div class="absolute -top-3 left-6 bg-accent-500 text-white px-4 py-1 rounded-md text-sm font-semibold">
      Terpopuler
    </div>
  )}
  
  <!-- Product Image -->
  <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 rounded-t-lg relative overflow-hidden">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="w-16 h-16 bg-accent-500 rounded-lg flex items-center justify-center">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="p-6">
    <!-- Product Title & Description -->
    <div class="mb-4">
      <h3 class="text-xl font-bold text-gray-900 mb-2">{product.title}</h3>
      <p class="text-gray-600 text-sm">{product.description}</p>
    </div>

    <!-- Key Features (simplified) -->
    <div class="mb-6">
      <ul class="space-y-2">
        {product.features.slice(0, 3).map((feature) => (
          <li class="flex items-start gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4 text-accent-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            {feature}
          </li>
        ))}
      </ul>
    </div>

    <!-- Simple Price Display -->
    <div class="mb-4">
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Mulai dari</span>
        <div class="text-right">
          <div class="text-lg font-bold text-accent-600">{kitPackage?.price}</div>
          <div class="text-xs text-gray-400 line-through">{kitPackage?.originalPrice}</div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-2">
      <a 
        href={`/resources/${product.id}`}
        class="w-full bg-accent-500 hover:bg-accent-600 text-white px-4 py-3 rounded-md font-semibold text-center transition-colors block"
      >
        Lihat Detail & Paket
      </a>
      <button class="w-full text-accent-600 hover:text-accent-700 text-sm font-medium border border-accent-200 hover:border-accent-300 rounded-md py-2 transition-colors">
        Quick Order
      </button>
    </div>
  </div>
</div>
