---
import heroData from '../../copy/index/hero.json';
---

<section class="relative overflow-hidden pt-32 pb-20 bg-gradient-to-br from-mint-50 via-cream-50 to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-accent-500/10 border border-accent-500/20 rounded-full px-4 py-2 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full"></div>
          <span class="text-sm font-medium text-accent-600">{heroData.badge.text}</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          {heroData.heading.main}<br/>
          <span class="text-accent-600">{heroData.heading.highlight}</span><br/>
          <span class="text-gray-700">{heroData.heading.suffix}</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          <span class="text-accent-600 font-semibold">{heroData.description.primary.split(' • ')[0]}</span> • {heroData.description.primary.split(' • ').slice(1).join(' • ')}<br/>
          <span class="text-gray-600">{heroData.description.secondary}</span>
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <button class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors w-full sm:w-auto">
            {heroData.buttons.primary}
          </button>
          <button class="bg-white/60 border border-gray-300 hover:bg-white/80 text-gray-800 px-8 py-4 rounded-lg font-medium text-lg transition-colors w-full sm:w-auto">
            {heroData.buttons.secondary}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
